{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="container pt-4">
        <div class="row mb-4">
            <div class="col">
                <a href="{{ path('admin_races_create') }}" class="btn btn-primary" data-mdb-ripple-init>
                    <i class="fas fa-plus me-3"></i>
                    Create Race
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <section class="mb-4">
                    <div class="card">
                        <h5 class="card-header">Races</h5>
                        <div class="card-body">
                            <form method="GET" action="{{ path('admin_races_list') }}">
                                {% set filters = app.request.query.all('filters') %}
                                <div class="row">
                                    <div class="col-lg-3 col-md-6 col-sm">
                                        <div class="form-outline mb-4" data-mdb-input-init>
                                            <select class="form-select form-control-lg" id="filters[year]" name="filters[year]">
                                                <option label="" {% if filters.year is defined and filters.year is empty %}selected{% endif %}>All years</option>
                                                {% for year in availableYears %}
                                                    <option
                                                        label="{{ year }}"
                                                        {% if (filters.year is not defined and year == 'now'|date('Y')) or (filters.year is defined and filters.year == year) %}selected{% endif %}
                                                    >
                                                        {{ year }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-3 col-md-6 col-sm">
                                        <div class="form-outline mb-4" data-mdb-input-init>
                                            <select class="form-select form-control-lg" id="filters[raceType]" name="filters[raceType]">
                                                <option label="" {% if filters.raceType is not defined or filters.raceType is empty %}selected{% endif %}>All types</option>
                                                {% for type in availableTypes %}
                                                    <option
                                                        label="{{ type }}"
                                                        {% if filters.raceType is defined and filters.raceType == type %}selected{% endif %}
                                                    >
                                                        {{ type }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-4">
                                    <div class="col">
                                        <button type="submit" class="btn btn-primary" data-mdb-ripple-init>
                                            <i class="fas fa-magnifying-glass me-3"></i>
                                            Filter
                                        </button>
                                    </div>
                                </div>
                            </form>

                            <div class="row">
                                <div class="col">
                                    <table class="table table-striped table-responsive">
                                        <thead>
                                            <tr>
                                                <th>Season</th>
                                                <th>Date</th>
                                                <th>Grand Prix</th>
                                                <th>Type</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for race in races %}
                                                <tr>
                                                    <td>{{ race.season.id }}</td>
                                                    <td>{{ race.date|date('Y-m-d') }}</td>
                                                    <td>{{ race.grandPrix }}</td>
                                                    <td>
                                                        {% if race.sprintRace == true %}
                                                            Sprint
                                                        {% else %}
                                                            Race
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if race.canceled == true %}
                                                            Canceled
                                                        {% elseif race.completed == true %}
                                                            Completed
                                                        {% else %}
                                                            Scheduled
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        <a
                                                            href="{{ path('admin_races_edit', { id: race.id }) }}"
                                                            class="btn btn-link btn-sm px-3"
                                                            data-mdb-ripple-init
                                                            data-ripple-color="primary"
                                                        >
                                                            <i class="fas fa-lg fa-pen-to-square"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
{% endblock %}
